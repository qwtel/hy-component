{
  "name": "hy-component",
  "version": "1.0.0-pre.21",
  "description": "Tools for building web components that work across popular UI frameworks.",
  "main": "src/index.js",
  "scripts": {
    "clean": "rm -rf es5 esm",
    "test": "eslint src",
    "format": "prettier --write \"src/**/*.js\"",
    "build": "npm run build:es5 & npm run build:esm & wait",
    "build:es5": "NODE_ENV=es5 babel src --out-dir es5",
    "build:esm": "NODE_ENV=esm babel src --out-dir esm",
    "preversion": "npm run format && git add .",
    "prepublishOnly": "npm run test && npm run clean && npm run build"
  },
  "author": "Florian Klampfer <mail@qwtel.com> (https://qwtel.com/)",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-preset-env": "^1.7.0",
    "babelify": "^8.0.0",
    "envify": "^4.1.0",
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^2.9.0",
    "prettier": "^1.12.1"
  },
  "dependencies": {
    "attr-types": "^1.0.1",
    "qd-set": "^2.0.0"
  },
  "optionalDependencies": {
    "jquery": "^3.3.1",
    "rxjs": "^6.2.1"
  },
  "prettier": {
    "printWidth": 100,
    "trailingComma": "es5"
  },
  "eslintConfig": {
    "env": {
      "browser": true
    },
    "extends": "prettier",
    "parserOptions": {
      "sourceType": "module"
    }
  },
  "babel": {
    "env": {
      "es5": {
        "presets": [
          "env"
        ]
      },
      "esm": {
        "presets": [
          [
            "env",
            {
              "modules": false
            }
          ]
        ]
      }
    }
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "env"
          ]
        }
      ],
      [
        "envify",
        {
          "DEBUG": false
        }
      ]
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/qwtel/hy-component.git"
  },
  "keywords": [
    "webcomponents",
    "web",
    "components",
    "vanilla",
    "component",
    "jquery"
  ],
  "bugs": {
    "url": "https://github.com/qwtel/hy-component/issues"
  },
  "homepage": "https://github.com/qwtel/hy-component#readme"
}
