{
  "name": "hy-component",
  "version": "1.0.0-pre.25",
  "description": "Tools for building web components that work across popular UI frameworks.",
  "main": "src/index.js",
  "scripts": {
    "clean": "rm -rf es5 esm",
    "test": "exit 0",
    "format": "prettier --write \"src/**/*.js\"",
    "build": "npm run build:es5 & npm run build:esm & wait",
    "build:es5": "NODE_ENV=es5 babel src --out-dir es5",
    "build:esm": "NODE_ENV=esm babel src --out-dir esm",
    "preversion": "npm run format && git add .",
    "prepublishOnly": "npm run test && npm run clean && npm run build"
  },
  "author": "Florian Klampfer <mail@qwtel.com> (https://qwtel.com/)",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.3.1",
    "prettier": "^1.16.3"
  },
  "dependencies": {
    "attr-types": "^1.0.2",
    "qd-set": "^2.0.1"
  },
  "optionalDependencies": {
    "jquery": "^3.3.1",
    "rxjs": "^6.2.1"
  },
  "prettier": {
    "printWidth": 100,
    "trailingComma": "es5"
  },
  "babel": {
    "env": {
      "es5": {
        "presets": [
          "@babel/preset-env"
        ]
      },
      "esm": {
        "presets": [
          [
            "@babel/preset-env",
            {
              "modules": false
            }
          ]
        ]
      }
    }
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "@babel/preset-env"
          ]
        }
      ],
      [
        "envify",
        {
          "DEBUG": false
        }
      ]
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/qwtel/hy-component.git"
  },
  "keywords": [
    "webcomponents",
    "web",
    "components",
    "vanilla",
    "component",
    "jquery"
  ],
  "bugs": {
    "url": "https://github.com/qwtel/hy-component/issues"
  },
  "homepage": "https://github.com/qwtel/hy-component#readme"
}
